<Page
    x:Name="pageRoot"
    x:Class="FoulPlay_Windows8.Views.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoulPlay_Windows8.Views"
    xmlns:common="using:FoulPlay_Windows8.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="pageTitle" Margin="15,0,0,0" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1"
                       IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Center" />
        </Grid>
        
        <ScrollViewer VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" HorizontalScrollMode="Enabled" HorizontalAlignment="Left" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="700"/>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid Margin="15" Grid.Column="0" Width="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="15" Text="What's New" Grid.Row="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Row="1">
                    <Grid>

                    </Grid>
                </Border>
                <Grid Grid.Row="2">
                   <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Column="0">
                        <Grid>

                        </Grid>
                    </Border>
                    <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Column="1">
                        <Grid>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
                <Grid Margin="15" Grid.Column="1" Width="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="15" Text="Friends" Grid.Row="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <ProgressBar x:Name="FriendsProgressBar" Grid.Row="1" IsIndeterminate="True"/>
                    <ListView x:Name="FriendsListView" Grid.Row="2" HorizontalAlignment="Stretch" ItemsSource="{Binding FriendList}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition Width="75" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Rectangle VerticalAlignment="Center" HorizontalAlignment="Left"
                                                   Grid.Column="0" Width="15" Height="15"
                                                   Fill="{Binding Presence.PrimaryInfo.OnlineStatus, Converter={StaticResource OnlineConverter}}" />
                                    <Border VerticalAlignment="Top" Grid.Column="1" Width="70" Height="70">
                                        <Image Source="{Binding AvatarUrl}" Stretch="UniformToFill" />
                                    </Border>
                                    <Grid VerticalAlignment="Top" Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="25" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding OnlineId}" Width="300"
                                                           FontSize="25" TextWrapping="NoWrap"
                                                           TextTrimming="WordEllipsis" />
                                            <Image Visibility="{Binding Plus, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Column="1" HorizontalAlignment="Right" Width="25"
                                                       Height="25" Source="/Assets/PSPlus.png" />
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Width="300">
                                                <TextBlock
                                                        Text="{Binding Presence.PrimaryInfo.GameTitleInfo.TitleName}"
                                                        FontSize="15" TextWrapping="Wrap" />
                                                <TextBlock Text="{Binding  Presence.PrimaryInfo.GameStatus}"
                                                               FontSize="15" TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right"
                                                            Orientation="Vertical">
                                                <Image Width="25" Height="25"
                                                           Source="/Assets/Trophy-icon-Silver.png" />
                                                <TextBlock FontSize="15" HorizontalAlignment="Center"
                                                               Text="{Binding TrophySummary.Level}" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <Grid Margin="15" Grid.Column="2" Width="600">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="15" Text="Live From Playstation" Grid.Row="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Row="1">
                        <Grid>

                        </Grid>
                    </Border>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Column="0">
                            <Grid>

                            </Grid>
                        </Border>
                        <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Column="1">
                            <Grid>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <Grid Margin="15" Grid.Column="3" Width="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="15" Text="What's New" Grid.Row="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Row="1">
                        <Grid>

                        </Grid>
                    </Border>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Column="0">
                            <Grid>

                            </Grid>
                        </Border>
                        <Border Margin="15" BorderBrush="White" BorderThickness="2" Grid.Column="1">
                            <Grid>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
        
    </Grid>
</Page>
